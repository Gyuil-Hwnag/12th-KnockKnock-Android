<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="holder"
            type="com.depromeet.knockknock.ui.alarmroomsearch.model.AlarmRoom" />

        <variable
            name="eventListener"
            type="com.depromeet.knockknock.ui.alarmroomsearch.AlarmRoomSearchActionHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:onClick="@{() -> eventListener.onRoomClicked(holder.roomId)}">

        <ImageView
            android:id="@+id/room_img"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/custom_transparents_radius08_line_transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:roomImageImage="@{holder.roomThumbnail}">
        </ImageView>



        <TextView
            android:id="@+id/room_title"
            style="@style/Theme.AppCompat.TextView.Filter.Room.Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/room_img"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="13dp"
            android:text="@{holder.roomName}">
        </TextView>

        <TextView
            android:id="@+id/room_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/gray06"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="13dp"
            android:text="@{holder.roomDescription}"
            app:layout_constraintTop_toBottomOf="@id/room_title"
            app:layout_constraintStart_toEndOf="@id/room_img"
            >
        </TextView>

        <LinearLayout
            android:id="@+id/member_count_category_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="13dp"
            app:layout_constraintTop_toBottomOf="@id/room_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/room_img">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/gray06"
                android:text="멤버 ">

            </TextView>

            <TextView
                android:id="@+id/member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/gray06"
                android:text="@{holder.roomMemberCount}">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/gray06"
                android:text="명">

            </TextView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@drawable/custom_yellow_radius16"
                android:id="@+id/layout_main"
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="@{holder.roomCategoryName}">
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>




        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

