<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="holder"
            type="com.depromeet.knockknock.ui.editroomdetails.model.Thumbnail"/>

        <variable
            name="eventListener"
            type="com.depromeet.knockknock.ui.editroomdetails.EditRoomDetailsActionHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_marginEnd="12dp">


        <ImageView
            android:id="@+id/room_img"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:roomThumbnailImage="@{holder.thumbnailSrc}">
        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

