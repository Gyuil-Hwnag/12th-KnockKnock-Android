<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.depromeet.knockknock.ui.alarmcreate.AlarmCreateViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:padding="16dp"
            android:textColor="@color/gray07"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toStartOf="@+id/edit_btn"
            app:layout_constraintTop_toTopOf="@+id/toolbar"
            android:text="미리보기"/>

        <TextView
            android:id="@+id/edit_btn"
            android:textSize="16dp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/black"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="@id/toolbar"
            app:onSingleClick="@{() -> vm.onAlarmPushClicked()}"
            android:text="완료">
        </TextView>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="33dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/some_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_regular"
                            android:gravity="center_horizontal|top"
                            android:lineSpacingExtra="4sp"
                            android:text="주호민"
                            android:textColor="#212121"
                            android:textSize="22dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                        <ImageView
                            android:layout_width="15.27dp"
                            android:layout_height="15.27dp"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/ic_baseline_create_24"
                            app:layout_constraintStart_toEndOf="@+id/some_id"
                            app:layout_constraintTop_toTopOf="parent">

                        </ImageView>

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/pretendard_regular"
                        android:lineSpacingExtra="3sp"
                        android:text="새로쓰기"
                        app:onSingleClick="@{() -> vm.onDeleteEditTextMessageClicked()}"
                        app:deleteTextVisible="@{vm.editTextMessageCountEvent}"
                        android:textColor="#BDBDBD"
                        android:translationY="-1.45sp"
                        android:layout_gravity="right"
                        />
                </RelativeLayout>




                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/some_id">

                    <LinearLayout
                        app:linearLayoutColorChange="@{vm.editTextMessageCountEvent}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="1dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="19dp"
                            android:background="@null"
                            android:src="@drawable/ic_baseline_cancel_24"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/edit_text_message"
                            android:text="@={vm.editTextMessageEvent}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="16dp"
                            android:background="@android:color/transparent"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:hint="메시지를 작성해주세요!"
                            android:maxHeight="110dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textColorHint="#757575"
                            android:textSize="22dp"
                            android:maxLength="200"
                            />


                        <TextView
                            android:id="@+id/edit_text_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:gravity="right|top"
                            android:lineSpacingExtra="3sp"
                            android:text="0/200"
                            android:textColor="#BDBDBD"
                            android:textSize="16dp"
                            android:translationY="-1.6sp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/add_image_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="150dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardView"
                    tools:layout_editor_absoluteX="-30dp"
                    app:onSingleClick="@{() -> vm.onAddImageClicked()}"
                    app:addImageCardViewVisible="@{vm.imgState}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="4dp"
                            android:gravity="center"
                            android:src="@drawable/ic_baseline_add_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:gravity="top"
                            android:text="사진 추가하기"
                            android:textColor="#616161"
                            android:textSize="14dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/img_load"
                    app:imgLoadVisible="@{vm.imgState}"
                    app:onSingleClick="@{() -> vm.onAddImageClicked()}"
                    android:layout_gravity="center"
                    android:layout_width="122dp"
                    android:layout_height="106dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="150dp"
                    android:visibility="visible"/>
            </LinearLayout>

        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="3sp"
            android:text="추천 메시지"
            android:textColor="#000000"
            android:textSize="16dp"
            android:translationY="-1.6sp"
            app:layout_constraintBottom_toTopOf="@+id/rv_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

